 # eu criei essas tabelas só para testa o sistema, elas precisam ser alteradas

 # o arquivos id precisa  ter o mesmo id que a tabela produto se não vai da convergência nas imagens


 CREATE TABLE produto (
	id int AUTO_INCREMENT,
    nome VARCHAR(20),
    descricao VARCHAR(255),
    cod_product VARCHAR(255),
    quantidade VARCHAR(20),
    validade VARCHAR(20),
    preco VARCHAR(20),
    PRIMARY KEY (id)
    );
    
    CREATE TABLE arquivos(
	nome varchar(40),
    path VARCHAR(50),
    id int auto_increment,
	PRIMARY KEY (id)
);
    
    CREATE TABLE funcionarios (
	id int AUTO_INCREMENT primary key,
    nome VARCHAR(40),
	sobrenome VARCHAR(40),
    cpf VARCHAR(40),
    emissor VARCHAR(40),
    data_nascimento VARCHAR(40),
    telefone VARCHAR(20),
     email VARCHAR(40),
	admissao VARCHAR(40),
    cargo VARCHAR(40),
    senha VARCHAR(40),
	observacao VARCHAR(255)
   );
    

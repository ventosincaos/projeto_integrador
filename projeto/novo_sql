CREATE SCHEMA `sysffee` DEFAULT CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci ;
use sysffee;

CREATE TABLE `sysffee`.usuarios (
  id_usuario INT AUTO_INCREMENT PRIMARY KEY,
  user_usuario VARCHAR(255) NOT NULL,
  senha_usuario VARCHAR(255) NOT NULL,
  funcao_usuario INT NOT NULL,
  email_usuario VARCHAR(255) NOT NULL
);

CREATE SCHEMA `teste_empresa` DEFAULT CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci ;
use teste_empresa;

CREATE TABLE `teste_empresa`.funcionarios (
  id_funcionarios INT PRIMARY KEY,
  id_cargo_funcionarios INT,
  nome_funcionarios VARCHAR(255) NOT NULL COMMENT 'nome',
  sobrenome_funcionarios VARCHAR(255) NOT NULL COMMENT 'sobrenome',
  data_nascimento_funcionarios DATE NOT NULL,
  email_funcionarios VARCHAR(255) NOT NULL,
  celular_funcionarios VARCHAR(20) NOT NULL,
  cpf_funcionarios VARCHAR(14) NOT NULL,
  data_admissao_funcionarios DATE NOT NULL,
  data_demissao_funcionarios DATE NULL,
  descricao_funcionarios VARCHAR(255) NULL
);